---
import Layout from "../layouts/Layout.astro";
import { LandingPage } from "../components/landing/LandingPage";

// Disable prerendering - this is a public page with optional auth
export const prerender = false;

// Check if user is authenticated (optional for landing page)
const user = Astro.locals.user;
const isAuthenticated = !!user;
---

<Layout title="10xNotes - Wygeneruj podsumowanie spotkania">
  <LandingPage client:load isAuthenticated={isAuthenticated} />
</Layout>
