---
import type { GoalStatus } from "../../types";

interface Props {
  /** Goal achievement status */
  value: GoalStatus | null;
}

const { value } = Astro.props;

// Don't render anything if status is null or undefined
if (!value) {
  return null;
}

// Determine badge styling and content based on status
const getBadgeConfig = (status: GoalStatus) => {
  switch (status) {
    case "achieved":
      return {
        className: "bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-400",
        label: "Cel osiągnięty",
        ariaLabel: "Status celu: osiągnięty",
        icon: "check-circle",
      };
    case "not_achieved":
      return {
        className: "bg-red-100 text-red-800 dark:bg-red-900/30 dark:text-red-400",
        label: "Cel nieosiągnięty",
        ariaLabel: "Status celu: nieosiągnięty",
        icon: "x-circle",
      };
    default:
      return {
        className: "bg-neutral-100 text-neutral-800 dark:bg-neutral-700 dark:text-neutral-300",
        label: "Nieokreślony",
        ariaLabel: "Status celu: nieokreślony",
        icon: null,
      };
  }
};

const config = getBadgeConfig(value);
---

<span
  class={`inline-flex items-center px-3 py-1 rounded-full text-sm font-medium ${config.className}`}
  role="status"
  aria-label={config.ariaLabel}
>
  {
    config.icon === "check-circle" && (
      <svg class="w-4 h-4 mr-1.5" fill="currentColor" viewBox="0 0 20 20">
        <path
          fill-rule="evenodd"
          d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
          clip-rule="evenodd"
        />
      </svg>
    )
  }
  {
    config.icon === "x-circle" && (
      <svg class="w-4 h-4 mr-1.5" fill="currentColor" viewBox="0 0 20 20">
        <path
          fill-rule="evenodd"
          d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z"
          clip-rule="evenodd"
        />
      </svg>
    )
  }
  {config.label}
</span>
