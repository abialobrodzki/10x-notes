---
interface Props {
  /** Summary text content */
  text: string | null;
}

const { text } = Astro.props;
---

{
  text && (
    <div class="prose prose-neutral dark:prose-invert max-w-none">
      <div class="text-glass-text whitespace-pre-wrap" data-testid="public-note-summary-display">
        {text}
      </div>
    </div>
  )
}
