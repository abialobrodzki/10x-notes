---
interface Props {
  /** HTTP error code (404, 429, 500, etc.) */
  code: 404 | 429 | 500;
  /** Retry-After header value in seconds (for 429 errors) */
  retryAfter?: number;
}

const { code, retryAfter } = Astro.props;

// Configure error display based on code
const getErrorConfig = (errorCode: number) => {
  switch (errorCode) {
    case 404:
      return {
        title: "Nie znaleziono",
        description: "Link publiczny nie istnieje lub został wyłączony.",
        icon: "not-found",
      };
    case 429:
      return {
        title: "Limit wyświetleń osiągnięty",
        description: retryAfter
          ? `Osiągnięto maksymalną liczbę wyświetleń. Spróbuj ponownie za ${retryAfter} sekund.`
          : "Osiągnięto maksymalną liczbę wyświetleń. Spróbuj ponownie później.",
        icon: "rate-limit",
      };
    case 500:
    default:
      return {
        title: "Błąd serwera",
        description: "Wystąpił problem podczas ładowania podsumowania. Spróbuj ponownie później.",
        icon: "server-error",
      };
  }
};

const config = getErrorConfig(code);
---

<div class="container mx-auto px-4 py-16 max-w-2xl">
  <div class="bg-white dark:bg-neutral-800 rounded-lg shadow-lg p-8 text-center">
    <!-- Error icon -->
    <div class="mb-6 flex justify-center">
      {
        config.icon === "not-found" && (
          <svg
            class="w-16 h-16 text-neutral-400 dark:text-neutral-600"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            aria-hidden="true"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
            />
          </svg>
        )
      }
      {
        config.icon === "rate-limit" && (
          <svg
            class="w-16 h-16 text-amber-500 dark:text-amber-400"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            aria-hidden="true"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
            />
          </svg>
        )
      }
      {
        config.icon === "server-error" && (
          <svg
            class="w-16 h-16 text-red-500 dark:text-red-400"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            aria-hidden="true"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"
            />
          </svg>
        )
      }
    </div>

    <!-- Error title -->
    <h1 class="text-2xl font-bold mb-4 text-neutral-900 dark:text-neutral-100">
      {config.title}
    </h1>

    <!-- Error description -->
    <p class="text-neutral-600 dark:text-neutral-400 mb-6">
      {config.description}
    </p>

    <!-- CTA button -->
    <a href="/" class="btn-public-cta inline-block px-6 py-3 rounded-lg"> Powrót do strony głównej </a>
  </div>
</div>
